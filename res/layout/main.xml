<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp" android:layout_weight="1"
                  android:orientation="horizontal"
                  android:gravity="center">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="用于填充Fragment"/>
    </LinearLayout>

    <View android:background="@android:color/darker_gray"
          android:layout_height="0.2dp"
          android:layout_width="match_parent"/>

    <!--bottom tab-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="5dp"
                  android:paddingBottom="5dp">

        <LinearLayout android:id="@+id/llHome"
                      android:layout_height="wrap_content"
                      android:layout_width="0dp" android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center">
            <lib.FaIconView android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="fa-home"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="30dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="首页"
                      android:textColor="@android:color/holo_blue_light"
                      android:textSize="11dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/llCalendar"
                      android:layout_height="wrap_content"
                      android:layout_width="0dp" android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center">
            <lib.FaIconView android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="fa-calendar"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="23dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@android:color/darker_gray"
                      android:text="旅行日程"
                      android:textSize="11dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/llPhone"
                      android:layout_height="wrap_content"
                      android:layout_width="0dp" android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center">
            <lib.FaIconView android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="fa-phone"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="28dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="电话"
                      android:textColor="@android:color/darker_gray"
                      android:textSize="11dp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/llMe"
                      android:layout_height="wrap_content"
                      android:layout_width="0dp" android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center">
            <lib.FaIconView android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="fa-user"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="27dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="我的携程"
                      android:textColor="@android:color/darker_gray"
                      android:textSize="11dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

